{
  "manifest_version": 3,
  "name": "Rest, please+",
  "version": "1.0",
  "description": "Kindly reminds the user to take a rest.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
      
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["img/*.jpg"],
      "matches": ["<all_urls>"]
    }
  ]

}